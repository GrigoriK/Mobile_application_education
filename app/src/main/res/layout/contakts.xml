<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:layout_marginTop="10dp"
    android:paddingRight="6dp"
    android:background="#f5f5f5"
    android:paddingLeft="6dp"
    android:paddingEnd="10dp">
    <TextView
        android:id="@+id/title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/contakts "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6"
        android:src="@drawable/logo_408_90" />

    <TextView
        android:id="@+id/text_about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_logo"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/call_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_about"
        android:layout_below="@+id/text_about">
        <ImageView
            android:id="@+id/call"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    <TextView
        android:id="@+id/text_tel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_fax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/call_layout"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/call_layout">

        <ImageView
            android:id="@+id/fax"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_fax_24dp"
             />

    <TextView
        android:id="@+id/text_fax"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="" />
    </LinearLayout>

</RelativeLayout>
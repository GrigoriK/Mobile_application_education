<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:layout_marginTop="10dp"
    android:paddingRight="6dp"
    android:background="#f5f5f5"
    android:paddingLeft="6dp"
    android:paddingEnd="10dp">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        app:srcCompat="@drawable/logo_long_acikt_306_51"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"/>


    <TextView
      android:id="@+id/text_main"
      android:text="Академия современных инфокоммуникационных технологий"
      android:textSize="23sp"
      android:gravity="center"
      android:textColor="@color/color_fragM"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/image1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_main"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        android:textColor="@color/color_deliver"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="@string/main" />

</RelativeLayout>